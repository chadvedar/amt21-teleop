            <origin rpy="0 0 0" xyz="0 0 0.095"/>

            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>

        </visual>
    </link>

    <link name="joint4">
        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.05"/>
            </geometry>

            <origin rpy="0 1.570796 0" xyz="0.15 0 0"/>

            <material name="red">
                <color rgba="1 0 0 1"/>
