    <joint name="joint3_to_joint4" type="fixed">
        <parent link="joint3"/>
        <child link="joint4"/>
        <origin rpy="0 0 0" xyz="0 0 0.19"/>
    </joint>

    <joint name="joint4_to_endeffector" type="fixed">
        <parent link="joint4"/>
        <child link="end_effector"/>
        <origin rpy="0 0 0" xyz="0.3 0.0 0.0"/>
    </joint>

</robot>