            <origin rpy="0 0 0" xyz="0 0 0.03"/>

            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>

        </visual>
    </link>

    <link name="joint2">
        <visual>
            <geometry>
                <cylinder length="0.15" radius="0.05"/>
            </geometry>

            <origin rpy="0 1.570796 0" xyz="0.075 0 0"/>

            <material name="red">
